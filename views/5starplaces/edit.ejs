
<% layout('layouts/boilerplate') %> 

    <div class="row">
        <!-- <h1 class="text-conter">Edit Place</h1> -->
        <h1 class="text-conter h1 text-center " style="color: #68D3BD;">Edit Place</h1>

        <!-- <div class="col-6 offset-3"> -->
            <form action="/5starplaces/<%= placeground._id %>?_method=PUT" style="margin:auto;" method="POST" novalidate class="validated-form w-75 shadow-lg p-3 mb-5 bg-body rounded" enctype="multipart/form-data">
              <div class="mb-3">
                  <label class="form-label" for="title">Title</label>
                  <input class="form-control" type="text" id="title" name="placeground[title]" value="<%= placeground.title %>" required>
              </div>
              <div class="mb-3">
                  <label class="form-label" for="location">Location</label>
                  <input class="form-control" type="text" id="location" name="placeground[location]" value="<%=placeground.location %>" required>
              </div>
              
               <div class="mb-3">
                  <label class="form-label" for="price">Place price</label>
                  <div class="input-group ">
                      <span class="input-group-text" id="price-label">$</span>
                      <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price" value="<%=placeground.price %>" aria-describedby="price-label" name="placeground[price]" required>
                  </div>
               </div>
            <div class="col-md-4">
                    <label for="duration" class="form-label">State</label>
                    <select id="inputState"class="form-select" aria-label="Default select example" name="placeground[duration]">
                    <!-- <option selected>Choose...</option> -->
                    <% for (let durationes of duration) { %>
                    <option  value="<%= durationes %>"  <%= placeground.durationes === durationes ? 'selected' : '' %>><%=durationes %> </option>                    <% } %> 
                   
                </select>
            </div>
                <div class="mb-3 mt-3">
                                    
                   <div class="col-md-4 ">
                    <label class="form-label mr-3" for="typeplace">Select:</label>
                    <select  class="form-select" aria-label="Default select example" name="placeground[typeplace]" id="typeplace">
                      <% for (let typeplacee of typeplacees) { %>
                      <option  value="<%= typeplacee %>"  <%= placeground.typeplacee === typeplacee ? 'selected' : '' %>><%=typeplacee %> </option>
                    <% } %> 
                   
                 </div>
            </select>
            </div>
              <div class="mb-3 mt-3">
                  <label class="form-label" for="description">Description</label>
                  <textarea class="form-control" type="text" id="location" name="placeground[description]" required ><%=   placeground.description %> </textarea>
              </div>

              <div class="mb-3 mt-3">
                <label class="form-label">Add more Image(s)</label>
                <div class="form-file custom-file">
                      <input class="form-control custom-file-input" type="file" id="image" name="image" multiple onchange="previewMultiple(event)">
                      <label for="image" class="form-label custom-file-label"></label>
                  </div>
                  <div id="formFile"></div>
              </div>
  
              <!-- <div class="mb-3">
                <%// placeground.image.forEach(function(img, i) {  %>
                    <img src="<%=//img.thumbnail %>" class="img-thumbnail" alt="">
                <div class="form-check-inline">
                    <input type="checkbox" id="image-<%=//i%>" name="deleteImages[]" value="<%=//img.filename%>">
                </div>
                <label for="image-<%//=i%>">Delete?</label>
                <%// })%>
             </div> -->

            <!--//////////////////////  -->
           

            <h5 style="padding:5px">Delete Images: </h5>
            <div class="row row-cols-1 row-cols-md-4 g-4 mb-3">
                <% placeground.image.forEach((image, i) => {%>
                    <div class="col">
                        <div class="card ">
                            <label for="image-<%=i %>">
                                <!-- تحقق من أن مسار الصورة صحيح -->
                                <img crossorigin="anonymous"  class="card-img-top" src="<%= image.thumbnail %>" alt="Image <%= i + 1 %>">
                                
                                <div class=" pe-2" style="justify-content: center; padding:3px; display: flex; background: aliceblue;">
                                    <input class="form-check-input" type="checkbox" name="deleteImages[]" value="<%= image.filename %>" id="image-<%= i %>">
                                </div>
                            </label>
                        </div>
                    </div>
                <% }) %>
              
            </div>
            
            <!-- ///////////////////// -->

                 <div class="mb-3 mt-5 d-flex justify-content-center">
                  <button class="btn btn-info">Update Place</button>
                 </div>
                 <a class="btn btn-secondary" href="/5starplaces/<%= placeground._id %> "> Back </a>
          </form>
        <!-- </div> -->
     </div>
  
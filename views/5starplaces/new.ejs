
<% layout('layouts/boilerplate') %> 
<link rel="stylesheet" href="/stylesheets/stylesheets.css" class="rel">
   <div class="row">
      <h1 class="text-conter">New Place</h1>
      <div class="col-6 offset-3">
        <form action="/5starplaces" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="placeground[title]" required>
                <div class="valid-feedback">
                    Looks Good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="placeground[location]"required>
                <div class="valid-feedback">
                    Looks Good!
                </div>
            </div>
          

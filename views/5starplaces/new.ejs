      <h1 class="text-conter h1 text-center " style="color: #68D3BD;" >New Place</h1>
        <form action="/5starplaces" method="POST" novalidate style="margin: auto;" class="validated-form w-75 shadow-lg p-3 mb-5 bg-body rounded" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label  " for="title">Title</label>
                <input class="form-control" type="text" id="title" name="placeground[title]" required>
                <div class="valid-feedback">
                    Looks Good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="placeground[location]"required>
                <div class="valid-feedback">
                    Looks Good!
                </div>
            </div>
         
         
